<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceCircle">
        <item name="cornerSize">25%</item>
    </style>

    <style name="CommonDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/border_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="cursorColor">@color/black</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/hint_text_color</item>
        <item name="android:padding">0dp</item>
        <item name="errorEnabled">false</item>
    </style>

    <style name="DatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>